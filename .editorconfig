root = true

[*]
charset = utf-8
insert_final_newline = false

[*.{c,h}]
indent_style = space
indent_size = 4

[{Makefile.*,*.mk}]
indent_style = tab

[*.m4]
indent_style = space
indent_size = 2

[{meson.build,meson_options.txt}]
indent_style = space
indent_size = 2

[{CMakeLists.txt, *.cmake}]
indent_style = space
indent_size = 4

